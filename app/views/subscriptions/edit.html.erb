<% if current_user.subscription.on_trial? %>
  <div class="flex items-center bg-orange-lightest text-orange-dark text-sm font-bold px-4 py-3 mb-4" role="alert">
    <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z"/></svg>
    <p>Your trial ends in <%= time_ago_in_words current_user.subscription.trial_ends_at %>.</p>
  </div>
<% end %>

<h1>Change Your Plan</h1>
<p class="text-xl">Simple, straightforward pricing to get your online business up and running</p>

<hr />

<div data-controller="pricing" data-pricing-plans-class="flex hidden" data-pricing-interval-class="bg-white text-black">
  <div class="inline-block rounded-full bg-blue-dark py-2 px-1 text-white mb-4">
    <a data-action="click->pricing#switch" data-target="pricing.monthlyToggle" data-show="monthly" class="cursor-pointer py-2 px-4 bg-white rounded-full text-black">Monthly</a>
    <a data-action="click->pricing#switch" data-target="pricing.yearlyToggle" data-show="yearly" class="cursor-pointer py-2 px-4 rounded-full"> Yearly</a>
  </div>

  <div data-target="pricing.monthlyPlans" class="flex -mx-4">
    <% Jumpstart.config.monthly_plans.each do |plan| %>
      <%= render layout: "subscriptions/plan", locals: { plan: plan } do %>
        <% if @subscription.jumpstart_plan == plan %>
          <div class="btn btn-rounded btn-lg btn-grey">Current Plan</div>
        <% else %>
          <%= form_for current_user, url: subscription_url do |f| %>
            <%= f.hidden_field :plan, value: plan["id"] %>
            <%= f.button 'Change Plan', class: "btn btn-rounded btn-lg btn-blue" %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>

  <div data-target="pricing.yearlyPlans" class="hidden -mx-4">
    <% Jumpstart.config.yearly_plans.each do |plan| %>
      <%= render layout: "subscriptions/plan", locals: { plan: plan } do %>
        <% if @subscription.jumpstart_plan == plan %>
          <div class="btn btn-rounded btn-lg btn-grey">Current Plan</div>
        <% else %>
          <%= form_for current_user, url: subscription_url do |f| %>
            <%= f.hidden_field :plan, value: plan["id"] %>
            <%= f.button 'Change Plan', class: "btn btn-rounded btn-lg btn-blue" %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
