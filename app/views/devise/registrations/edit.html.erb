<div class="flex flex-wrap my-4 lg:px-4">
  <div class="lg:w-1/4 w-full p-4">
    <%= render partial: "shared/account_navbar" %>
  </div>

  <div class="lg:w-3/4 w-full p-4">
    <h2 class="mb-4">Edit Profile</h2>

    <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: " max-w-lg") do |f| %>
      <%= render "shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name, "Full name" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Steve Jobs", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "you@example.com", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :time_zone %>

        <div class="relative form-group">
          <%= f.time_zone_select :time_zone, nil, { default: browser_time_zone.name }, { class: "select" } %>
          <div class="caret"><svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg></div>
        </div>
      </div>

      <label class="label">Avatar</label>
      <div class="flex items-center justify-start">
        <div class="form-group">
          <%= f.file_field :avatar, class: "form-control form-file" %>
          <label for="avatar" class="cursor-pointer">
            <%= render_svg "icons/photo", styles: "fill-current icon-xs mr-2" %> <span>Upload Avatar</span>
          </label>
        </div>
        <%= image_tag avatar_url_for(f.object), class: "rounded-full ml-4 -mt-8 w-16" %>
      </div>

      <div class="form-group mt-6">
        <%= f.button "Update", class: "btn btn-primary", data: { disable_with: disable_with("Saving...") } %>
      </div>
    <% end %>

    <!--
    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    -->
  </div>
</div>
