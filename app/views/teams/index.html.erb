<div class="container mx-auto my-8">
  <div class="flex justify-between items-center mb-3">
    <h1 class="h3">Teams</h1>

    <% if @teams.exists? %>
      <%= link_to 'New Team', new_team_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if @teams.exists? %>
    <div class="bg-white rounded shadow">
      <table class="w-full">
        <thead>
          <tr>
            <th class="p-3 uppercase text-left text-xs text-grey-dark">Name</th>

            <th></th>
          </tr>
        </thead>

        <tbody>
        <% @teams.each do |team| %>
          <tr class="group border-t border-grey-light hover:bg-grey-lightest">
            <td class="p-3"><%= team.name %></td>

            <td class="p-3 w-32 text-center">
              <%= link_to "View", team, class: "invisible group-hover:visible text-sm text-blue-dark no-underline" %>
              <%= link_to "Switch", switch_team_path(team), method: :patch, class: "invisible group-hover:visible text-sm text-blue-dark no-underline" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div class="text-center my-5">
      <%== pagy_nav(@pagy) %>
    </div>

  <% else %>
    <div class="bg-white rounded shadow">
      <div class="text-center p-8">
        <%= image_tag "empty.svg", class: "w-1/3 mb-4" %>
        <p class="h3 mb-4">Create your first Team</p>
      <%= link_to 'New Team', new_team_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
