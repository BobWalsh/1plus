<div class="flex flex-wrap my-4 lg:px-4">
  <div class="lg:w-1/4 w-full p-4">
    <%= render partial: "shared/account_navbar" %>
  </div>

  <div class="lg:w-3/4 w-full p-4">
    <h1 class="h2 mt-3 mb-5">Invite to join <%= current_team.name %></h1>

    <%= form_with(url: team_members_path) do |form| %>
      <%#= render "shared/error_messages", resource: form.object %>

      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, class: "form-control", placeholder: "example@domain.com" %>
      </div>

      <div class="form-group">
        <%= form.label :admin %>
        <%= form.check_box :admin %>
      </div>

      <div class="form-group">
        <%= form.button "Send invitation", class: "btn btn-primary" %>
        <%= link_to "Cancel", current_team, class: "btn btn-link" %>
      </div>
    <% end %>
  </div>
</div>
