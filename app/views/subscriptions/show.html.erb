<div class="flex">
  <div class="w-1/4 p-4">
    <%= render partial: "shared/account_navbar" %>
  </div>

  <div class="w-3/4 p-4">
    <h1>Billing</h1>

    <h3>Current Plan</h3>

    <% if current_user.subscription && current_user.subscription.on_trial? %>
      <div class="flex items-center bg-orange-lightest text-orange-dark text-sm font-bold px-4 py-3 my-4" role="alert">
        <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z"/></svg>
        <p>Your trial ends in <%= time_ago_in_words current_user.subscription.trial_ends_at %>.</p>
      </div>
    <% end %>

    <% if current_user.subscription && current_user.subscription.cancelled? %>
      <% if current_user.subscription.on_grace_period? %>
        <div class="flex">
          <div class="flex-1">
            Your subscription ends <strong><%= current_user.subscription.ends_at.strftime("%B %d, %Y") %></strong>
          </div>

          <div>
            <%= form_for current_user, url: resume_subscription_url, method: :patch do |f| %>
              <%= f.button 'Resume Subscription', class: "btn btn-grey", data: { disable_with: disable_with("Resuming...") } %>
            <% end %>
          </div>
        </div>

      <% else %>
        <p>Your subscription has ended. Would you like to <%= link_to "resubscribe", new_subscription_path %>?</p>
      <% end %>

    <% elsif current_user.subscription && current_user.subscription.active? %>

      <div class="flex">
        <div class="flex-1">
          <div>You are currently subscribed to the <strong><%= current_user.subscription.jumpstart_plan["name"] %></strong> plan.</div>
        </div>
        <div>
          <%= link_to "Change my plan", edit_subscription_path, class: "text-grey-darker" %>
        </div>
      </div>
    <% else %>
      <p>You are not currently subscribed.</p>
    <% end %>

    <hr class="border-b my-8" />

    <h3>Payment Method</h3>

    <% if current_user.card_brand? %>

      <div class="flex" data-controller="toggle">
        <div class="flex-1">
          <i class="fab fa-cc-<%= current_user.card_brand.downcase %>"></i> <%= payment_method_details %>

          <% if !current_user.paypal? %>
            <%= form_with model: current_user, url: card_url, html: { id: 'payment_form', class: 'hidden mt-4', data: { target: "toggle.toggleable" } } do |f| %>
              <%= render 'cards/fields/stripe',    f: f if Jumpstart.config.stripe? %>
              <%= render 'cards/fields/braintree', f: f if Jumpstart.config.braintree? %>
              <%= f.button 'Update Card', class: "btn btn-grey", data: { disable_with: disable_with("Saving...") } %>
            <% end %>
          <% end %>
        </div>
        <div>
          <% if current_user.paypal? %>
            <%= link_to "Change source", "https://www.paypal.com/us/smarthelp/article/faq1414", target: "_blank", rel: "nofollow noopener" %>
          <% else %>
            <%= link_to "Use a new card", "#", class: "text-grey-darker", data: { action: "click->toggle#toggle" } %>
          <% end %>
        </div>
      </div>

    <% else %>
      <p>You have no card on file.</p>
    <% end %>

    <hr class="border-b my-8" />

    <h3>Extra Billing Information</h3>
    <div class="flex" data-controller="toggle">
      <div class="flex-1">
        Add any additional information to all of your receipts such as your VAT ID, full business name, and address.

      <%= form_with model: current_user, url: info_subscription_path, html: { class: "hidden mt-4", data: { target: "toggle.toggleable" }} do |f| %>
        <div class="form-group">
          <%= f.label :extra_billing_info %>
          <%= f.text_area :extra_billing_info, class: "form-control", placeholder: "VAT ID, Business name, address, etc..." %>
        </div>

        <div class="form-group">
          <%= f.button "Save Information", class: "btn btn-grey", data: { disable_with: disable_with("Saving...") } %>
        </div>
      <% end %>

      </div>
      <div>
        <%= link_to "Add information", "#", class: "text-grey-darker", data: { action: "click->toggle#toggle" } %>
      </div>

    </div>

    <hr class="border-b my-8" />

    <h3>Invoices</h3>
    <p>Your history of transactions and payments.</p>

    <% current_user.charges.each do |charge| %>
      <%= link_to charge.created_at.strftime("%B %e, %Y"), charge_path(charge, format: :pdf) %> - <%= number_to_currency charge.amount / 100 %>
    <% end %>

    <% if current_user.subscription && !current_user.subscription.cancelled? %>
      <hr class="border-b my-8" />
      <h3>Cancel Your Subscription</h3>
      <div class="flex">
        <div class="flex-1">
          <div class="font-bold">You can cancel anytime, but you'll lose access to <%= Jumpstart.config.application_name %></div>
          <div>Need to talk to someone? Contact us -- we'd love to help.</div>
        </div>
        <div>
          <%= form_for current_user, url: subscription_url, method: :delete do |f| %>
            <%= f.button 'Cancel Subscription', class: "btn btn-outline-grey", data: { confirm: "Are you sure?", disable_with: disable_with("Cancelling..") } %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
