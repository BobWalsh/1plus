<h4>LiveReload</h4>

<div class="form-group">
  <p>Checking this option will install guard, guard_livereload and rack_livereload</p>
  <div class="custom-control custom-checkbox">
    <%= f.check_box :livereload, value: true, checked: Jumpstart.config.livereload?, class: "form-checkbox", id: "livereload" %>
    <%= label_tag "livereload", "Enable Rack::LiveReload", class: "inline-block" %>
  </div>
</div>

<h4>Solargraph</h4>

<div class="form-group">
  <p>Checking this option will install solargraph rails support</p>
  <p class="form-hint">Note that <code>solargraph</code> must be installed globally.</p>
  <div class="custom-control custom-checkbox">
    <%= f.check_box :solargraph, value: true, checked: Jumpstart.config.solargraph?, class: "form-checkbox", id: "solargraph" %>
    <%= label_tag "solargraph", "Enable rails support and install solargraph-rails", class: "inline-block" %>
  </div>
</div>
